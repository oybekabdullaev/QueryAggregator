@model QueryAggregator.ViewModels.QueryViewModel

@{
    ViewBag.Title = "Home Page";
}

<h2>Please, enter your query.</h2>

@using (@Html.BeginForm("Links", "Home"))
{
    <div class="form-group">
        @Html.LabelFor(q => q.Query)
        @Html.TextBoxFor(q => q.Query, new { @class = "form-control" })
        @Html.ValidationMessageFor(q => q.Query)
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");
}
